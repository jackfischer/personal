<?xml version="1.0"?>
<root>
    <appdef>
        <appname>WebStorm</appname>
        <equal>com.jetbrains.WebStorm</equal>
    </appdef>
    <appdef>
        <appname>PyCharm</appname>
        <equal>com.jetbrains.PyCharm</equal>
    </appdef>    

    <devicevendordef>
        <vendorname>CM_STORM</vendorname>
        <vendorid>0x2516</vendorid>
    </devicevendordef>
    <deviceproductdef>
        <productname>QUICKFIRE</productname>
        <productid>0x0011</productid>
    </deviceproductdef>

    <item>
        <name>Custom Correct External Keyboard</name>
        <identifier>private.custom_quickfire_correction</identifier>
        <device_only>DeviceVendor::CM_STORM, DeviceProduct::QUICKFIRE</device_only>
        <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::OPTION_L</autogen>
        <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::COMMAND_L</autogen>
        <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::OPTION_R</autogen>
        <autogen>__KeyToKey__ KeyCode::OPTION_R, KeyCode::COMMAND_R</autogen>
    </item>

    <item>
        <name>Fix Media Keys External Keyboard</name>
        <identifier>private.custom_quickfire_media</identifier>
        <device_only>DeviceVendor::CM_STORM, DeviceProduct::QUICKFIRE</device_only>
        <autogen>__KeyToKey__ ConsumerKeyCode::MUSIC_NEXT_17, ConsumerKeyCode::MUSIC_NEXT</autogen>
        <autogen>__KeyToKey__ ConsumerKeyCode::MUSIC_PREV_18, ConsumerKeyCode::MUSIC_PREV</autogen>
    </item>

    <item>
        <name>Custom Mouse Buttons</name>
        <identifier>private.custom_logitech_buttons</identifier>
        <autogen>__PointingButtonToKey__ PointingButton::BUTTON6, KeyCode::MISSION_CONTROL</autogen>
        <autogen>__KeyToKey__ PointingButton::BUTTON5, KeyCode::CURSOR_RIGHT, ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__ PointingButton::BUTTON4, KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L</autogen>
    </item>

    <replacementdef>
        <replacementname>UBIQUITOUS_VIM_BINDINGS_IGNORE_APPS</replacementname>
        <replacementvalue>XCODE, TERMINAL, ALFRED, VI, PASSWORD, ECLIPSE, SUBLIMETEXT, WebStorm, PyCharm</replacementvalue>
    </replacementdef>

</root>

